@using biblioteca_webapp.DTO
@model IEnumerable<LibroDTO>
@{
    ViewData["Title"] = "Libros";
}
<div class="card">
    <div class="card-header">
        <div class="col-2">
            <h5>Libros</h5>
        </div>
        <div class="col">
            <a asp-action="Create" class="btn btn-primary"> Agregar</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col text-center">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Libro</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (LibroDTO item in Model) {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Titulo</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"> Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"> Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>


    </div>
</div>

