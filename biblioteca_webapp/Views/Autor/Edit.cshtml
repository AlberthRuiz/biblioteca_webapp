@using biblioteca_webapp.DTO
@model AutorCreacionDTO
@{
    ViewData["Title"] = "Editar Autor";
}
<div class="card">
	<h5 class="card-header">Editar Autor: @Model.Nombres</h5>
	<form asp-action="Edit" method="post">
        <div class="card-body">
			<div class="form-group">
				<label for="Nombre">Nombres</label>
				<input type="text" class="form-control" asp-for="Nombres">
			</div>
			<div class="form-group">
				<label for="Apellidos">Apellidos</label>
				<input type="text" class="form-control" asp-for="Apellidos">
			</div>
			<div class="form-group">
				<label for="Identificacion">Identitficacion</label>
				<input type="text" class="form-control" asp-for="Identificacion">
			</div>
			
        </div>
        <div class="card-footer">
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary "> Regresar </a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>

